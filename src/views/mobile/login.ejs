<!DOCTYPE html>
<html lang="de">

    <head>	
		<%- include('partials/head') -%>	
        <title>FWmonitor - APP</title>	 

        <link rel="stylesheet" href="/css/mobile_login.css">
        
    </head>	

    <body class="">

        <%- include('partials/header') -%>  

            <!-- TOP -->
            <div 
                class="navbar" 
                style="
                    height: 30vh;
                    display: flex;
                    align-items: center;"
            >

                <div 
                    style="
                        display: flex;"
                >

                    <div 
                        style="
                            width: 4em;
                            margin-left: 2em;
                            margin-right: 1.5em;
                            display: flex;
                            align-items: center;"
                    >
                        <img 
                            class="avatar circle" 
                            src="/icons/icon-384x384.png"
                            style="
                                border-radius: 50%;
                                border: 1px solid white;
                                display: block;
                                width: 100%;
                                height: auto;"
                        />
                    </div>                    

                    <div>
                        <p
                            style="
                                font-size: 1.2em;
                                font-weight: bold;"
                        >
                            FWmonitor
                        </p>  
                        <p>
                            FF Fischbachau
                        </p>  
                    </div>
                    
                    
                </div>

            </div>
            <div class="navbar" style="height: 2em; transform: translate3d(0,-30%,0) skewY(-2deg);"></div>


            <!-- CONTENT -->
            <div
                class="content flex_column" 
                style="
                    align-items: stretch;
                    padding-top: 3em;"
            >

                <!-- LOADER LOGIN -->
                <div 
                    id="loginLoader"
                    class="flex-grow flex_column flex_center_horizontal flex_center_vertical hidden" 
                >
                        <div class="spinner_rotateplane"></div>
                        <h2 class="text_align_center">Laden...</h2>
                </div>

                <!-- LOGIN FORM -->
                <div 
                    id="loginFormContainer" 
                    class="flex-grow flex_column flex_center_horizontal flex_center_vertical" 
                >
                    <form 
                        id="loginForm"
                        action="login" 
                        method="get"
                        style="width: 90%;"
                    >

                        <div class="input-container">
                            <span class="material-icons">person</span>                                
                            <input id="var_telid" class="input-field" type="text" placeholder="Telegram ID" name="username">
                        </div>

                        <div class="input-container">
                            <span class="material-icons">password</span>                                
                            <input id="var_passwort" class="input-field" type="password" placeholder="Passwort" name="password">
                        </div>

                        <button type="submit" class="btn">Anmelden</button>

                    </form>
                </div>

            </div>


        <script>

            document.getElementById('loginForm').onsubmit = function () {

                let loader = document.querySelector("#loginLoader");
                loader.classList.remove("hidden");

                let loginFormContainer = document.querySelector("#loginFormContainer");
                loginFormContainer.classList.add("hidden");

                fetch(url_login, {                    
                    method: 'POST', // *GET, POST, PUT, DELETE, etc.
                    mode: 'cors', // no-cors, *cors, same-origin
                    cache: 'no-cache', // *default, no-cache, reload, force-cache, only-if-cached
                    credentials: 'include', // include, *same-origin, omit
                    withCredentials: true,
                    redirect: 'follow', // manual, *follow, error
                    referrerPolicy: 'no-referrer', // no-referrer, *no-referrer-when-downgrade, origin, origin-when-cross-origin, same-origin, strict-origin, strict-origin-when-cross-origin, unsafe-url
					headers: {'Content-Type': 'application/json'},					
					body: JSON.stringify({
						telegramid: document.getElementById("var_telid").value,
						password: document.getElementById("var_passwort").value
					})
				})
				.then(data => data.json())
				.then(data =>  { 
					console.log(data);
                    if(data.message && data.message == 'OK') {
                        setCookie('logout_status', 'false', 1);
                        loaderIn('index', true); 
                        return false;
                    }
                    if(data.message) {
                        console.error("Login Fehler: ", data.message);	
                        alert(data.message);
                        loader.classList.add("hidden");
                        loginFormContainer.classList.remove("hidden");
                    }
				}) 
				.catch((err) => {
					console.error("Login Fehler: ", err);	
                    loader.classList.add("hidden");
                    loginFormContainer.classList.remove("hidden");
				})

                return false;
            }
            
        </script>

        <%- include('partials/foot') -%>

    </body>
	
</html>